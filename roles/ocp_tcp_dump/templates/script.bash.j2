[[ $(( {{ start_time }} % 60 )) -le $(date +"%M") ]] && echo "Too late to execute" && exit 1
while [[ $(( {{ start_time }} % 60 )) -lt $(date +"%M") ]]; do sleep 1; done
pcap_file="{{ item.node_name }}-{{ namespace }}-{{ item.pod_name }}-$(date +"%m-%d-%Y-%H-%M")"
pod_pid=$(chroot /host /bin/bash -c 'crictl inspectp $(crictl pods --name "^{{ item.pod_name }}$" --namespace "^{{ namespace }}$" --quiet) | jq .info.pid')
timeout {{ execution_time }}s nsenter -t ${pod_pid} -n -- tcpdump -i any -nn -w /host/tmp/${pcap_file}.pcap
exit 0
